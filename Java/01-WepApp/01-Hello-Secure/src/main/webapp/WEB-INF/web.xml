<?xml version="1.0" encoding="UTF-8"?>
<web-app>

    <display-name>My Protected Application Demo</display-name>

    <description>This Web Application uses a protected area</description>

    <!-- Security constraint for the administrators area -->
    <security-constraint>
        <display-name>My Protected Application Demo - Constraints for administrators data </display-name>
    
        <web-resource-collection>

            <web-resource-name>Administrators protected pages</web-resource-name>

            <url-pattern>/pages/admin/*</url-pattern>

        </web-resource-collection>

        <auth-constraint>
            <role-name>administrator</role-name>
        </auth-constraint>

        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    
    <!-- Security constraint for the all users area -->
    <security-constraint>
        <display-name>My Protected Application Demo - Constraints for all users data </display-name>
    
        <web-resource-collection>

            <web-resource-name>All users protected pages</web-resource-name>

            <url-pattern>/pages/users/*</url-pattern>
            <url-pattern>/pages/*</url-pattern>

        </web-resource-collection>

        <auth-constraint>
            <role-name>administrator</role-name>
            <role-name>user</role-name>
        </auth-constraint>

        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
  
    <login-config>
        <auth-method>FORM</auth-method>

        <realm-name>My Protected Application Form-Based Authentication Area</realm-name>

        <form-login-config>
            <form-login-page>/pub/form/Login.jsp</form-login-page>
            <form-error-page>/pub/form/Error.jsp</form-error-page>
        </form-login-config>    
    </login-config>

    <!--
    <security-role>
        <role-name>deetc-docente-role</role-name>
    </security-role>
    -->

    <welcome-file-list>
        <welcome-file>/index.jsp</welcome-file>
    </welcome-file-list>

    <error-page>
        <error-code>408</error-code>
        <location>/pub/errors/408.jsp</location>
    </error-page>
  
</web-app>
